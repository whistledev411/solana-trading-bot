{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "module": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@common/*": ["common/*"],
      "@trader/*": ["trader/*"],
      "@preprocessor/*": ["preprocessor/*"],
      "@postprocessor/*": ["postprocessor/*"],
      "@signals/*": ["signals/*"],
      "@toolset/*": ["toolset/*"]
    }
  }
}